<Page x:Class="DigitalHelper.Views.SecureNotes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalHelper.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="SecureNotes">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Top Bar-->
        <Border Grid.Row="0" Padding="10" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="NewNoteButton" 
                        Grid.Column="0"
                        Content="+ New Note" 
                        Margin="0,0,10,0"
                        Style="{StaticResource SuccessButtonStyle}"/>

                <Grid Grid.Column="1" Margin="0,0,10,0">
                    <TextBox x:Name="SearchBox" 
                             Style="{StaticResource StandardTextBoxStyle}"
                             VerticalContentAlignment="Center"/>
                    <TextBlock x:Name="SearchPlaceholder"
                               Text="Search notes..." 
                               Foreground="{StaticResource TextLightBrush}"
                               FontSize="14"
                               Padding="11,9"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
            </Grid>
        </Border>

        <!--Main Content-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Left Section-->
            <Border Grid.Column="0" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,0" Background="{StaticResource ContentBackgroundBrush}">
                <ListBox x:Name="NoteListBox" 
                         Background="{StaticResource ContentBackgroundBrush}"
                         BorderThickness="0"
                         SelectionMode="Single"
                         Padding="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="15,12" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDarkBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding ContentPreview}" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMediumBrush}"
                                               Margin="0,4,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding FormattedModifiedDate}" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextLightBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!--Right Section-->
            <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
                <!--View Mode-->
                <Grid x:Name="ViewPanel" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Edit Button-->
                    <Border Grid.Row="0" Padding="20,15" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                        <Button x:Name="EditButton"
                                Content="Edit"
                                HorizontalAlignment="Right"
                                Padding="20,8"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </Border>

                    <!--Details (Read-Only)-->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20,20,20,20">
                            <!--Title-->
                            <TextBlock Text="Title" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ViewTitleTextBox" 
                                     FontSize="16" 
                                     Padding="10,8"
                                     IsReadOnly="True"
                                     BorderBrush="{StaticResource BorderMediumBrush}"
                                     Margin="0,0,0,20"
                                     Background="{StaticResource ReadOnlyBackgroundBrush}"
                                     FontWeight="SemiBold"/>

                            <!--Dates-->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Created" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextLightBrush}" 
                                               Margin="0,0,0,3"/>
                                    <TextBlock x:Name="ViewCreatedDateTextBlock" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMediumBrush}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Modified" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextLightBrush}" 
                                               Margin="0,0,0,3"/>
                                    <TextBlock x:Name="ViewModifiedDateTextBlock" 
                                               FontSize="12" 
                                               Foreground="{StaticResource TextMediumBrush}"/>
                                </StackPanel>
                            </Grid>

                            <!--Content-->
                            <TextBlock Text="Content" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ViewContentTextBox" 
                                     FontSize="14" 
                                     Padding="10,8"
                                     IsReadOnly="True"
                                     BorderBrush="{StaticResource BorderMediumBrush}"
                                     Background="{StaticResource ReadOnlyBackgroundBrush}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="200"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!--Edit Mode-->
                <Grid x:Name="EditPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--Title Bar-->
                    <Border Grid.Row="0" Padding="20,15" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Background="{StaticResource SectionBackgroundBrush}">
                        <TextBlock x:Name="EditTitleTextBlock"
                                   Text="Edit Note"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDarkBrush}"/>
                    </Border>

                    <!--Edit Form-->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20,20,20,20">
                            <!--Title-->
                            <TextBlock Text="Title *" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditNoteTitleTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"/>

                            <!--Content-->
                            <TextBlock Text="Content *" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditContentTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="300"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!--Action Buttons-->
                    <Border Grid.Row="2" 
                            Background="{StaticResource SectionBackgroundBrush}" 
                            BorderBrush="{StaticResource BorderLightBrush}" 
                            BorderThickness="0,1,0,0"
                            Padding="20">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button x:Name="DeleteButton"
                                        Content="Delete"
                                        Padding="20,10"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="SaveButton"
                                        Content="Save"
                                        Padding="25,10"
                                        Margin="0,0,10,0"
                                        Style="{StaticResource SuccessButtonStyle}"/>
                                
                                <Button x:Name="CancelButton"
                                        Content="Cancel"
                                        Padding="25,10"
                                        Style="{StaticResource NeutralButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!--Empty State Message-->
                <StackPanel x:Name="EmptyStatePanel" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="No note selected" 
                               FontSize="18" 
                               Foreground="{StaticResource TextLightBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a note from the list or create a new one" 
                               FontSize="14" 
                               Foreground="{StaticResource TextLightBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

