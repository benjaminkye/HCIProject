<Page x:Class="DigitalHelper.Views.Settings"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:DigitalHelper.Views" mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000" Title="Settings">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="{StaticResource ContentBackgroundBrush}" BorderBrush="{StaticResource BorderMediumBrush}" BorderThickness="0,0,0,1" Height="70">
            <Grid>
                <Button Grid.Column="0" Content="â† Back" Click="BackButton_Click" Style="{StaticResource TransparentButtonStyle}" HorizontalAlignment="Left" Margin="0,0,0,0" Padding="30,5"/>
                <TextBlock Text="Preferences" FontSize="{DynamicResource TitleFontSize}" FontWeight="Bold" Foreground="{DynamicResource TextDarkBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1" Margin="20,0,20,10" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="15" Margin="0,10,0,20" Padding="25" BorderBrush="Transparent" BorderThickness="0">
                    <StackPanel>
                        <TextBlock Text="Live Preview" FontSize="{DynamicResource HeadingFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDarkBrush}"/>
                        <TextBlock Text="This preview shows your current font size and what the guidance outlines will look like on screen during realtime help." FontSize="{DynamicResource BodyFontSize}" Foreground="{DynamicResource TextMediumBrush}" Margin="0,5,0,15" TextWrapping="Wrap"/>
                        <Border BorderBrush="Transparent" CornerRadius="10" Padding="20">
                            <StackPanel>
                                <TextBlock Text="Sample Heading" FontSize="{DynamicResource HeadingFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDarkBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Sample body text shows your current font size." FontSize="{DynamicResource BodyFontSize}" Foreground="{DynamicResource TextMediumBrush}" HorizontalAlignment="Center" Margin="0,5,0,15"/>
                                <Grid Height="100">
                                    <Rectangle x:Name="PreviewRectangle" Width="200" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center" Stroke="{DynamicResource AppBorderColorBrush}" StrokeThickness="4" Fill="Transparent"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <Border Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="15" Margin="0,10,0,10" Padding="25" Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Theme" FontSize="{DynamicResource HeadingFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDarkBrush}"/>
                            <TextBlock Text="Choose your preferred color scheme" FontSize="{DynamicResource BodyFontSize}" Foreground="{DynamicResource TextMediumBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                        <ComboBox x:Name="ThemeComboBox" Grid.Column="1" VerticalAlignment="Center" Height="35" FontSize="{DynamicResource BodyFontSize}" SelectionChanged="ThemeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="Dark"/>
                            <ComboBoxItem Content="Auto"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Border Color" FontSize="{DynamicResource HeadingFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDarkBrush}"/>
                            <TextBlock Text="Choose the color for guidance outlines shown on screen during realtime help" FontSize="{DynamicResource BodyFontSize}" Foreground="{DynamicResource TextMediumBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                        <ComboBox x:Name="BorderColorComboBox" Grid.Column="1" VerticalAlignment="Center" Height="35" FontSize="{DynamicResource BodyFontSize}" SelectionChanged="BorderColorComboBox_SelectionChanged">
                            <ComboBoxItem Content="Blue"/>
                            <ComboBoxItem Content="Green"/>
                            <ComboBoxItem Content="Red"/>
                            <ComboBoxItem Content="Purple"/>
                            <ComboBoxItem Content="Orange"/>
                        </ComboBox>
                    </Grid>
                </Border>
                <Border Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Border Thickness" FontSize="{DynamicResource HeadingFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDarkBrush}"/>
                            <TextBlock Text="Adjust the thickness of guidance outlines shown on screen during realtime help" FontSize="{DynamicResource BodyFontSize}" Foreground="{DynamicResource TextMediumBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Slider x:Name="BorderThicknessSlider" Grid.Column="1" VerticalAlignment="Center" Minimum="1" Maximum="5" Value="1" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="BorderThicknessSlider_ValueChanged"/>
                    </Grid>
                </Border>
                
                <!-- Font Size -->
                <Border Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Font Size" FontSize="{DynamicResource HeadingFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDarkBrush}"/>
                            <TextBlock Text="Adjust the text size throughout the application" FontSize="{DynamicResource BodyFontSize}" Foreground="{DynamicResource TextMediumBrush}" Margin="0,5,0,0"/>
                        </StackPanel>
                        <ComboBox x:Name="FontSizeComboBox" Grid.Column="1" VerticalAlignment="Center" Height="35" FontSize="{DynamicResource BodyFontSize}" SelectionChanged="FontSizeComboBox_SelectionChanged">
                            <ComboBoxItem Content="Small"/>
                            <ComboBoxItem Content="Medium"/>
                            <ComboBoxItem Content="Large"/>
                            <ComboBoxItem Content="Extra Large"/>
                        </ComboBox>
                    </Grid>
                </Border>
                <!-- Browser Zoom Sync -->
                <Border Background="{DynamicResource ContentBackgroundBrush}" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Sync Browser Zoom" FontSize="{DynamicResource HeadingFontSize}" FontWeight="SemiBold" Foreground="{DynamicResource TextDarkBrush}"/>
                            <TextBlock Text="Automatically adjust browser zoom level when you change the font size (requires browser extension)" FontSize="{DynamicResource BodyFontSize}" Foreground="{DynamicResource TextMediumBrush}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                        <CheckBox x:Name="BrowserZoomSyncCheckBox" Grid.Column="1" VerticalAlignment="Center" Checked="BrowserZoomSyncCheckBox_Changed" Unchecked="BrowserZoomSyncCheckBox_Changed" Width="30" Height="30"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>