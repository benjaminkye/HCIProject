<Page x:Class="DigitalHelper.Views.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalHelper.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Settings">

    <Grid Background="#F4F3F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Margin="20,20,20,0" CornerRadius="15">
            <Grid>
                <TextBlock Text="Settings" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#333333"
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" Margin="20,10,20,10" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <Border Background="White" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Font Size" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Text="Adjust the text size throughout the application" 
                                      FontSize="12" 
                                      Foreground="#666666" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <ComboBox Grid.Column="1" 
                                 VerticalAlignment="Center" 
                                 Height="35"
                                 FontSize="14">
                            <ComboBoxItem Content="Small" />
                            <ComboBoxItem Content="Medium" IsSelected="True"/>
                            <ComboBoxItem Content="Large" />
                            <ComboBoxItem Content="Extra Large" />
                        </ComboBox>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Theme" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Text="Choose your preferred color scheme" 
                                      FontSize="12" 
                                      Foreground="#666666" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <ComboBox Grid.Column="1" 
                                 VerticalAlignment="Center" 
                                 Height="35"
                                 FontSize="14">
                            <ComboBoxItem Content="Light" IsSelected="True"/>
                            <ComboBoxItem Content="Dark" />
                            <ComboBoxItem Content="Auto" />
                        </ComboBox>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Text-to-Speech (TTS)" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Text="Enable voice reading of text content" 
                                      FontSize="12" 
                                      Foreground="#666666" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="1" 
                                 VerticalAlignment="Center"
                                 IsChecked="False"/>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Autofill Passwords" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Text="Automatically fill saved passwords in forms" 
                                      FontSize="12" 
                                      Foreground="#666666" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="1" 
                                 VerticalAlignment="Center"
                                 IsChecked="True"/>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Automatic Feedback" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Text="Send usage data to improve the application" 
                                      FontSize="12" 
                                      Foreground="#666666" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <CheckBox Grid.Column="1" 
                                 VerticalAlignment="Center"
                                 IsChecked="False"/>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Highlight Color" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Text="Choose the color for highlighted elements" 
                                      FontSize="12" 
                                      Foreground="#666666" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <ComboBox Grid.Column="1" 
                                 VerticalAlignment="Center" 
                                 Height="35"
                                 FontSize="14">
                            <ComboBoxItem Content="Blue" IsSelected="True"/>
                            <ComboBoxItem Content="Green" />
                            <ComboBoxItem Content="Red" />
                            <ComboBoxItem Content="Purple" />
                            <ComboBoxItem Content="Orange" />
                        </ComboBox>
                    </Grid>
                </Border>

                <Border Background="White" CornerRadius="15" Margin="0,10,0,10" Padding="25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Border Thickness" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                            <TextBlock Text="Adjust the thickness of borders" 
                                      FontSize="12" 
                                      Foreground="#666666" 
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                        
                        <Slider Grid.Column="1" 
                               VerticalAlignment="Center" 
                               Minimum="1" 
                               Maximum="5" 
                               Value="2"
                               TickFrequency="1"
                               IsSnapToTickEnabled="True"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White" Margin="20,0,20,20" CornerRadius="15">
            <Button x:Name="BackButton"
                    Content="Back to Main Menu" 
                    Width="200" 
                    Height="50"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#4A90E2"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BackButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4A90E2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Page>