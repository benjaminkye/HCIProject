<Page x:Class="DigitalHelper.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalHelper.Views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="MainMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Password Vault Button-->
        <Button Grid.Column="0" Grid.Row="0" Margin="10"
                Click="PasswordVaultButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Vertical" >
                <Image Height="200" Width="200" Stretch="Uniform" Source="pack://application:,,,/DigitalHelper;component/Resources/vault.png"></Image>
                <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="SemiBold"
                               Text="Password Vault"/>
            </StackPanel>
        </Button>

        <!--Custom Help Button-->
        <Button Grid.Column="1" Grid.Row="0" Margin="10">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Vertical" >
                <Image Height="200" Width="200" Stretch="Uniform" Source="pack://application:,,,/DigitalHelper;component/Resources/chat.png"></Image>
                <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="SemiBold"
                               Text="Custom Help"/>
            </StackPanel>
        </Button>

        <!--Settings Button-->
        <Button Grid.Column="0" Grid.Row="1" Margin="10">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Vertical" >
                <Image Height="200" Width="200" Stretch="Uniform" Source="pack://application:,,,/DigitalHelper;component/Resources/settings.png"></Image>
                <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="SemiBold"
                               Text="Settings"/>
            </StackPanel>
        </Button>

        <!--Exit Button-->
        <Button Name="exitButton" Grid.Column="1" Grid.Row="1" Margin="10"
                Click="exitButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
            <StackPanel Orientation="Vertical" >
                <Image Height="200" Width="200" Stretch="Uniform" Source="pack://application:,,,/DigitalHelper;component/Resources/exit.png"></Image>
                <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="SemiBold"
                    Text="Exit"/>
            </StackPanel>
        </Button>
    </Grid>
</Page>
