<Page x:Class="DigitalHelper.Views.Cards"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalHelper.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="Cards">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Top Bar-->
        <Border Grid.Row="0" Padding="10" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Background="{StaticResource ContentBackgroundBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="NewCardButton" 
                        Grid.Column="0"
                        Content="+ New Card" 
                        Margin="0,0,10,0"
                        Style="{StaticResource SuccessButtonStyle}"/>

                <Grid Grid.Column="1" Margin="0,0,10,0">
                    <TextBox x:Name="SearchBox" 
                             Style="{StaticResource StandardTextBoxStyle}"
                             VerticalContentAlignment="Center"/>
                    <TextBlock x:Name="SearchPlaceholder"
                               Text="Search cards..." 
                               Foreground="{StaticResource TextLightBrush}"
                               FontSize="{DynamicResource BodyFontSize}"
                               Padding="11,9"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
            </Grid>
        </Border>

        <!--Main Content-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Left Section (Card List)-->
            <Border Grid.Column="0" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,0" Background="{StaticResource ContentBackgroundBrush}">
                <ListBox x:Name="CardListBox" 
                         Background="{StaticResource ContentBackgroundBrush}"
                         BorderThickness="0"
                         SelectionMode="Single"
                         Padding="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="15,12" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Text="{Binding CardName}" 
                                               FontSize="{DynamicResource HeadingFontSize}" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextDarkBrush}"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding LastFourDigits}" 
                                               FontSize="{DynamicResource BodyFontSize}" 
                                               Foreground="{StaticResource TextMediumBrush}"
                                               Margin="0,4,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!--Right Section: Details Panel-->
            <Grid Grid.Column="1" Background="{StaticResource ContentBackgroundBrush}">
                <!--View Mode Panel-->
                <Grid x:Name="ViewPanel" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--Edit Button-->
                    <Border Grid.Row="0" Padding="20,15" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1">
                        <Button x:Name="EditButton"
                                Content="Edit"
                                HorizontalAlignment="Right"
                                Padding="20,8"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </Border>

                    <!--Details (Read-Only)-->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20,20,20,20">
                            <!--Card Name-->
                            <TextBlock Text="Card Name" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ViewCardNameTextBox" 
                                     FontSize="{DynamicResource BodyFontSize}" 
                                     Padding="10,8"
                                     IsReadOnly="True"
                                     BorderBrush="{StaticResource BorderMediumBrush}"
                                     Margin="0,0,0,20"
                                     Background="{StaticResource ReadOnlyBackgroundBrush}"/>

                            <!--Card Holder Name-->
                            <TextBlock Text="Card Holder Name" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ViewCardHolderTextBox" 
                                     FontSize="{DynamicResource BodyFontSize}" 
                                     Padding="10,8"
                                     IsReadOnly="True"
                                     BorderBrush="{StaticResource BorderMediumBrush}"
                                     Margin="0,0,0,20"
                                     Background="{StaticResource ReadOnlyBackgroundBrush}"/>

                            <!--Card Number-->
                            <TextBlock Text="Card Number" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,20">
                                <TextBox x:Name="ViewCardNumberTextBox"
                                         FontSize="{DynamicResource BodyFontSize}" 
                                         Padding="10,8"
                                         IsReadOnly="True"
                                         BorderBrush="{StaticResource BorderMediumBrush}"
                                         Background="{StaticResource ReadOnlyBackgroundBrush}"/>
                                <Button x:Name="ShowCardNumberButton"
                                        Content="Show"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0"
                                        Padding="10,5"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{StaticResource PrimaryBlueBrush}"
                                        Cursor="Hand"
                                        FontSize="{DynamicResource BodyFontSize}"/>
                            </Grid>

                            <!--Expiry-->
                            <TextBlock Text="Expiry Date" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ViewExpiryDateTextBox" 
                                     FontSize="{DynamicResource BodyFontSize}" 
                                     Padding="10,8"
                                     IsReadOnly="True"
                                     BorderBrush="{StaticResource BorderMediumBrush}"
                                     Margin="0,0,0,20"
                                     Background="{StaticResource ReadOnlyBackgroundBrush}"/>

                            <!--CVV-->
                            <TextBlock Text="CVV" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,20">
                                <TextBox x:Name="ViewCVVTextBox"
                                         FontSize="{DynamicResource BodyFontSize}" 
                                         Padding="10,8"
                                         IsReadOnly="True"
                                         BorderBrush="{StaticResource BorderMediumBrush}"
                                         Background="{StaticResource ReadOnlyBackgroundBrush}"/>
                                <Button x:Name="ShowCVVButton"
                                        Content="Show"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Margin="0,0,10,0"
                                        Padding="10,5"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Foreground="{StaticResource PrimaryBlueBrush}"
                                        Cursor="Hand"
                                        FontSize="{DynamicResource BodyFontSize}"/>
                            </Grid>

                            <!--Card Type-->
                            <TextBlock Text="Card Type" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ViewCardTypeTextBox" 
                                     FontSize="{DynamicResource BodyFontSize}" 
                                     Padding="10,8"
                                     IsReadOnly="True"
                                     BorderBrush="{StaticResource BorderMediumBrush}"
                                     Margin="0,0,0,20"
                                     Background="{StaticResource ReadOnlyBackgroundBrush}"/>
                            
                            <!--Billing Address-->
                            <TextBlock Text="Billing Address" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="ViewBillingAddressTextBox" 
                                     FontSize="{DynamicResource BodyFontSize}" 
                                     Padding="10,8"
                                     IsReadOnly="True"
                                     BorderBrush="{StaticResource BorderMediumBrush}"
                                     Margin="0,0,0,20"
                                     Background="{StaticResource ReadOnlyBackgroundBrush}"
                                     TextWrapping="Wrap"
                                     MinHeight="60"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!--Edit Mode Panel-->
                <Grid x:Name="EditPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--Title Bar-->
                    <Border Grid.Row="0" Padding="20,15" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Background="{StaticResource SectionBackgroundBrush}">
                        <TextBlock x:Name="EditTitleTextBlock"
                                   Text="Edit Card"
                                   FontSize="{DynamicResource HeadingFontSize}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextDarkBrush}"/>
                    </Border>

                    <!--Edit Form-->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20,20,20,20">
                            <!--Card Name-->
                            <TextBlock Text="Card Name *" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditCardNameTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"/>

                            <!--Card Holder Name-->
                            <TextBlock Text="Card Holder Name *" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditCardHolderTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"/>

                            <!--Card Number-->
                            <TextBlock Text="Card Number *" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditCardNumberTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"
                                     MaxLength="19"/>

                            <!--Expiry Date-->
                            <TextBlock Text="Expiry Date (MM/YY) *" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditExpiryDateTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"
                                     MaxLength="5"/>

                            <!--CVV-->
                            <TextBlock Text="CVV *" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditCVVTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"
                                     MaxLength="4"/>

                            <!--Card Type-->
                            <TextBlock Text="Card Type" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="EditCardTypeComboBox" 
                                      FontSize="{DynamicResource BodyFontSize}" 
                                      Padding="10,8"
                                      BorderBrush="{StaticResource BorderMediumBrush}"
                                      Margin="0,0,0,20">
                                <ComboBoxItem Content="Visa"/>
                                <ComboBoxItem Content="MasterCard"/>
                                <ComboBoxItem Content="American Express"/>
                                <ComboBoxItem Content="Discover"/>
                                <ComboBoxItem Content="Other"/>
                            </ComboBox>

                            <!--Billing Address-->
                            <TextBlock Text="Billing Address (Optional)" 
                                       FontSize="{DynamicResource BodyFontSize}" 
                                       Foreground="{StaticResource TextMediumBrush}" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                            <TextBox x:Name="EditBillingAddressTextBox" 
                                     Style="{StaticResource StandardTextBoxStyle}"
                                     Margin="0,0,0,20"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     MinHeight="60"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!--Action Buttons-->
                    <Border Grid.Row="2" 
                            Background="{StaticResource SectionBackgroundBrush}" 
                            BorderBrush="{StaticResource BorderLightBrush}" 
                            BorderThickness="0,1,0,0"
                            Padding="20">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button x:Name="DeleteButton"
                                        Content="Delete"
                                        Padding="20,10"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="SaveButton"
                                        Content="Save"
                                        Padding="25,10"
                                        Margin="0,0,10,0"
                                        Style="{StaticResource SuccessButtonStyle}"/>
                                
                                <Button x:Name="CancelButton"
                                        Content="Cancel"
                                        Padding="25,10"
                                        Style="{StaticResource NeutralButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <!--Empty State Message-->
                <StackPanel x:Name="EmptyStatePanel" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="No card selected" 
                               FontSize="{DynamicResource HeadingFontSize}" 
                               Foreground="{StaticResource TextLightBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a card from the list or create a new one" 
                               FontSize="{DynamicResource BodyFontSize}" 
                               Foreground="{StaticResource TextLightBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>

