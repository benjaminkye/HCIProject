<Window x:Class="DigitalHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalHelper"
        xmlns:views="clr-namespace:DigitalHelper.Views"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="False"
        ShowInTaskbar="False"
        Title="MainWindow" Height="600" Width="1000">
    <Border Background="#F4F3F2">
        <Border.Clip>
            <RectangleGeometry RadiusX="35" RadiusY="35" Rect="0,0,1000,600"/>
        </Border.Clip>
        <Frame x:Name="MainFrame"
               d:DataContext="{d:DesignInstance Type=views:MainMenu, IsDesignTimeCreatable=True}" Content="{Binding}"
               NavigationUIVisibility="Hidden">
        </Frame>
    </Border>
</Window>
